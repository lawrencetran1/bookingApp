<%= render 'layouts/nav' %>

<div class="container">
  
  <p id="notice"><%= notice %></p>

  <h1>Listing Timeslots</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Slots Remaining</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @timeslots.each do |timeslot| %>
        <tr>
          <td><%= timeslot.name %></td>
          <td><%= 35-timeslot.guest_count %></td>
          <td><%= link_to 'Show', timeslot, class: "btn btn-success" %></td>
          <td><%= link_to 'Edit', edit_timeslot_path(timeslot), class: "btn btn-info" %></td>
          <td><%= link_to 'Destroy', timeslot, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Timeslot', new_timeslot_path, class: "btn btn-primary" %>


</div>