<%= render 'layouts/nav' %>

<div class="container">
  
  <p id="notice"><%= notice %></p>

  <p>
    <strong>First:</strong>
    <%= @guest.first_name %>
  </p>

  <p>
    <strong>Last:</strong>
    <%= @guest.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @guest.email %>
  </p>

  <p>
    <strong>Plus One:</strong>
    <%= @guest.plus_one %>
  </p>

  <p>
    <strong>Timeslot:</strong>
    <%= @guest.timeslot.name %>
  </p>

  <%= link_to 'Edit', edit_guest_path(@guest), class: "btn btn-default" %>
