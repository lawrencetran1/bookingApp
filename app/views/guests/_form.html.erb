<%= form_for @guest, html: {class: "form-horizontal"} do |f| %>
  <% if @guest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@guest.errors.count, "error") %> prohibited this guest from being saved:</h2>

      <ul>
      <% @guest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-md-3 control-label" for="firstname">First Name</label>
    <div class="col-md-9">
      <%= f.text_field :first_name, class:"form-control", placeholder:"First Name", :required => true %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label" for="lastname">Last Name</label>
    <div class="col-md-9">
      <%= f.text_field :last_name, class:"form-control", placeholder:"Last Name", :required => true %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label" for="email">Email</label>
    <div class="col-md-9">
      <%= f.text_field :email, class:"form-control", placeholder:"Email", :required => true %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label" for="num_of_friends">Number of Friends</label>
    <div class="col-md-9">
      <%= f.number_field :plus_one, class:"form-control", placeholder:"Number of Friends", :min => 0, :max => 3, :required => true %>
    </div>
  </div>  
  <div class="form-group">
    <label class="col-md-3 control-label" for="time_slot">Time Slot</label>
    <div class="col-md-9">
      <%= f.collection_select(:timeslot_id, getTimeSlots, :id, :name) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-3 col-md-9">
      <%= link_to 'Back', guests_path, class: "btn btn-default" %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
