<div class="container">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<%= form_tag('/login', :method => :post, :id => "login-form") do %>
									<div class="form-group">
										<%= text_field_tag :username, nil, placeholder: "username", :style => "width: 100%;", tabindex: "1", class: "form-control" %>
									</div>
									<div class="form-group">
										<%= password_field_tag :password, nil, placeholder: "password", :style => "width: 100%;", tabindex: "2", class: "form-control" %>
									</div>
									<div class="form-group">
										<%= submit_tag "Log In", id:"login-submit", tabindex:"4", class:"form-control btn btn-login" %>
									</div>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
